@{
    ViewBag.Title = "Авторизация";

}
@model MedCardWeb.Areas._Public.Models.Us
<h2>Авторизация</h2>


@using (Html.BeginForm("LogIn", "Home", FormMethod.Post, new { Area = "_Public", id = "my-form" }))
{
       
        @Html.ValidationSummary(true);
        @Html.AntiForgeryToken();
  
    @:Логин @Html.EditorFor(x => x.login)
    @Html.ValidationMessageFor(x => x.login);
    <br /><br />
  
    
    @:Пароль @Html.EditorFor(x => x.pass)
    @Html.ValidationMessageFor(x => x.pass);
    <br /><br />
    
    <input type="submit" value="submit" />
}

@if (Session["LogedUserID"] != null)
{
    @Session["LogedUserName"].ToString()
                       
}



@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")    
}

